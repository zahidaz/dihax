<section id="contact" class="contact">
  <div class="contact-container">
    <div class="section-header">
      <h2>Get In Touch</h2>
      <p>Ready to secure your infrastructure? Let's talk about your needs</p>
    </div>

    <div class="contact-content">
      <div class="contact-main">
        <p class="contact-description">Whether you need a security assessment, IT infrastructure support, or have questions about our services, we're here to help.</p>
        <div class="contact-links">
          <a href="mailto:contact@dihax.com" class="contact-link">
            <span class="link-label">Email</span>
            <span class="link-value">contact@dihax.com</span>
          </a>
          <a href="https://www.linkedin.com/company/dihax/" target="_blank" rel="noopener noreferrer" class="contact-link">
            <span class="link-label">LinkedIn</span>
            <span class="link-value">Connect with us</span>
          </a>
        </div>
        <a href="mailto:contact@dihax.com" class="btn-contact">Contact Us</a>
      </div>
    </div>
  </div>
</section>

<style>
  .contact {
    padding: 120px 40px;
    background: #fff;
  }

  .contact-container {
    max-width: 1100px;
    margin: 0 auto;
  }

  .section-header {
    text-align: center;
    margin-bottom: 80px;
  }

  .section-header h2 {
    font-size: 48px;
    font-weight: 600;
    margin: 0 0 16px;
    color: #000;
    font-family: system-ui, -apple-system, sans-serif;
    letter-spacing: -1px;
  }

  .section-header p {
    font-size: 18px;
    color: #666;
    margin: 0;
    font-family: system-ui, -apple-system, sans-serif;
  }

  .contact-content {
    max-width: 600px;
    margin: 0 auto;
  }

  .contact-main {
    text-align: center;
  }

  .contact-description {
    font-size: 18px;
    line-height: 1.6;
    color: #666;
    margin: 0 0 40px;
    font-family: system-ui, -apple-system, sans-serif;
  }

  .contact-links {
    display: flex;
    flex-direction: column;
    gap: 16px;
    margin-bottom: 40px;
  }

  .contact-link {
    display: flex;
    flex-direction: column;
    gap: 4px;
    padding: 24px;
    border: 1px solid #e0e0e0;
    border-radius: 8px;
    text-decoration: none;
    transition: all 0.2s ease;
  }

  .contact-link:hover {
    border-color: #000;
  }

  .link-label {
    font-size: 14px;
    color: #999;
    font-family: system-ui, -apple-system, sans-serif;
  }

  .link-value {
    font-size: 16px;
    font-weight: 500;
    color: #000;
    font-family: system-ui, -apple-system, sans-serif;
  }

  .btn-contact {
    display: inline-block;
    padding: 14px 32px;
    background: #000;
    color: #fff;
    text-decoration: none;
    border-radius: 8px;
    font-size: 15px;
    font-weight: 500;
    font-family: system-ui, -apple-system, sans-serif;
    transition: all 0.2s ease;
  }

  .btn-contact:hover {
    background: #333;
  }

  @media (max-width: 768px) {
    .contact {
      padding: 80px 24px;
    }

    .section-header {
      margin-bottom: 60px;
    }

    .section-header h2 {
      font-size: 36px;
    }

    .section-header p {
      font-size: 16px;
    }

    .contact-description {
      font-size: 16px;
    }

    .btn-contact {
      width: 100%;
    }
  }

  @media (max-width: 480px) {
    .contact {
      padding: 60px 20px;
    }

    .section-header h2 {
      font-size: 32px;
    }

    .contact-link {
      padding: 20px;
    }

    .link-value {
      font-size: 15px;
    }

    .btn-contact {
      padding: 12px 24px;
      font-size: 14px;
    }
  }
</style>
