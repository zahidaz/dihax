      padding: 80px 24px;
    }

    .section-header {
      margin-bottom: 60px;
    }

    .section-header h2 {
      font-size: 36px;
    }

    .section-header p {
      font-size: 16px;
    }

    .services-grid {
      grid-template-columns: 1fr;
      gap: 24px;
    }

    .service-card {
      padding: 32px;
    }

    .service-card h3 {
      font-size: 22px;
    }

    .service-description {
      font-size: 15px;
    }

    .service-list li {
      font-size: 14px;
    }
  }

  @media (max-width: 480px) {
    .services {
      padding: 60px 20px;
    }

    .section-header h2 {
      font-size: 32px;
    }

    .service-card {
      padding: 24px;
    }

    .service-card h3 {
