<style>
  .services {
    padding: 120px 40px;
    background: #fff;
  }

  .services-container {
    max-width: 1100px;
    margin: 0 auto;
  }

  .section-header {
    text-align: center;
    margin-bottom: 80px;
  }

  .section-header h2 {
    font-size: 48px;
