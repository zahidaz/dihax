    margin: 0;
    font-family: system-ui, -apple-system, sans-serif;
  }

  .services-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 32px;
  }

  .service-card {
    padding: 48px;
    border-radius: 12px;
    border: 1px solid #e0e0e0;
    transition: all 0.2s ease;
    background: #fff;
