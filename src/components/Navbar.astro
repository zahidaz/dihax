<nav class="navbar" role="navigation" aria-label="Main navigation">
  <a href="/" class="logo" aria-label="Dihax home">
    <img src="/d-transparent.png" alt="D" class="logo-icon" />
    <span class="logo-text">DIHAX</span>
  </a>
  <button class="hamburger" aria-label="Toggle menu" aria-expanded="false">
    <span></span>
    <span></span>
    <span></span>
  </button>
  <ul class="nav-links">
    <li><a href="#services">Services</a></li>
    <li><a href="#about">About</a></li>
    <li><a href="#contact">Contact</a></li>
  </ul>
</nav>

<script>
  const hamburger = document.querySelector('.hamburger');
  const navLinks = document.querySelector('.nav-links');

  hamburger?.addEventListener('click', () => {
    const isOpen = hamburger.getAttribute('aria-expanded') === 'true';
    hamburger.setAttribute('aria-expanded', String(!isOpen));
    hamburger.classList.toggle('active');
    navLinks?.classList.toggle('active');
  });
</script>

<style>
  .navbar {
    position: fixed;
    top: 20px;
    left: 50%;
    transform: translateX(-50%);
    max-width: 1200px;
    width: calc(100% - 40px);
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 16px 32px;
    background: linear-gradient(135deg, rgba(255, 87, 87, 0.15), rgba(14, 165, 233, 0.15));
    backdrop-filter: blur(20px);
    border: 1px solid rgba(255, 255, 255, 0.3);
    border-radius: 50px;
    z-index: 1000;
    box-sizing: border-box;
  }

  .logo {
    display: flex;
    align-items: center;
    gap: 4px;
    text-decoration: none;
  }

  .logo-icon {
    height: 32px;
    width: auto;
  }

  .logo-text {
    font-family: 'Inter', 'Roboto Condensed', system-ui, sans-serif;
    font-size: 24px;
    font-weight: 700;
    letter-spacing: -0.5px;
    color: #000;
  }

  .nav-links {
    display: flex;
    gap: 32px;
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .nav-links a {
    color: #545454;
    text-decoration: none;
    font-size: 14px;
    font-weight: 500;
    font-family: 'SF Mono', 'Monaco', 'Consolas', monospace;
    transition: color 0.3s ease;
    padding: 8px 12px;
    display: inline-block;
  }

  .nav-links a:hover,
  .nav-links a:focus {
    color: #ff5757;
    outline: none;
  }

  .nav-links a:focus-visible {
    outline: 2px solid #ff5757;
    outline-offset: 4px;
    border-radius: 4px;
  }

  .hamburger {
    display: none;
    flex-direction: column;
    gap: 4px;
    background: none;
    border: none;
    cursor: pointer;
    padding: 12px;
    z-index: 1001;
  }

  .hamburger span {
    width: 24px;
    height: 2px;
    background: #000;
    transition: all 0.3s ease;
    border-radius: 2px;
  }

  .hamburger.active span:nth-child(1) {
    transform: rotate(45deg) translate(6px, 6px);
  }

  .hamburger.active span:nth-child(2) {
    opacity: 0;
  }

  .hamburger.active span:nth-child(3) {
    transform: rotate(-45deg) translate(6px, -6px);
  }

  @media (max-width: 768px) {
    .navbar {
      top: 0;
      left: 0;
      right: 0;
      transform: none;
      max-width: 100%;
      width: 100%;
      border-radius: 0;
      padding: 16px 20px;
    }

    .logo {
      flex-shrink: 0;
    }

    .logo-icon {
      height: 28px;
    }

    .logo-text {
      font-size: 20px;
    }

    .hamburger {
      display: flex;
    }

    .nav-links {
      position: fixed;
      top: 0;
      right: -100%;
      height: 100vh;
      width: 70%;
      max-width: 300px;
      background: #fff;
      border-left: 1px solid rgba(0, 0, 0, 0.1);
      flex-direction: column;
      gap: 0;
      padding: 80px 24px 24px;
      box-shadow: -4px 0 16px rgba(0, 0, 0, 0.15);
      transition: right 0.3s ease;
      z-index: 1000;
    }

    .nav-links.active {
      right: 0;
    }

    .nav-links li {
      width: 100%;
    }

    .nav-links a {
      font-size: 16px;
      padding: 16px 12px;
      display: block;
      width: 100%;
      border-bottom: 1px solid #f0f0f0;
    }
  }

  @media (max-width: 480px) {
    .logo-icon {
      height: 24px;
    }

    .logo-text {
      font-size: 18px;
    }

    .nav-links {
      width: 80%;
    }
  }
</style>
